{
  "manifest_version": 3,
  "name": "Letterboxd-IMDb Switcher",
  "version": "1.0",
  "description": "Easily switch between Letterboxd and IMDb movie pages",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://letterboxd.com/*",
    "https://www.imdb.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}